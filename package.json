{
    "name": "pip-requirements-parser",
    "version": "0.0.0",
    "description": "Parse pip requirements.txt files in JS",
    "keywords": [
        "pip",
        "python",
        "requirements.txt"
    ],
    "author": "Michael Matloka",
    "license": "ISC",
    "main": "dist/index.js",
    "homepage": "https://github.com/Twixes/pip-requirements-parser#readme",
    "repository": "Twixes/pip-requirements-parser",
    "scripts": {
        "prepare": "husky install",
        "lint": "eslint --fix 'src/**'",
        "lint:check": "eslint 'src/**'",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "rimraf dist",
        "compile": "tsc",
        "compile:check": "tsc --noEmit",
        "test": "jest",
        "build": "pnpm clean && pnpm compile",
        "prepublishOnly": "pnpm test && pnpm build"
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.44.0",
        "eslint-config-standard-with-typescript": "^36.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.3",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    },
    "lint-staged": {
        "*.{js,json,md}": "prettier --write",
        "src/*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
