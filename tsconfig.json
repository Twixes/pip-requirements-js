{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["ES2023", "DOM"],
        "module": "commonjs",
        "rootDir": "./src/",
        /* Emit */
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "importsNotUsedAsValues": "remove",
        "stripInternal": true,
        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true
    },
    "exclude": ["src/**/*.test.ts"]
}
